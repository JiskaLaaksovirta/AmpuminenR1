<Window x:Class="Ampumapäiväkirjakonsoli.Ampujataulukko"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ampumapäiväkirjakonsoli"
        mc:Ignorable="d"
        Title="MainWindow" Height="1500" Width="1500">
    <Grid>
        
        <Grid>
            <TextBox x:Name="txtAmpumaradanPituus" HorizontalAlignment="Left" Margin="42,333,0,0" TextWrapping="Wrap" Text="Ampumaradan pituus(m):" VerticalAlignment="Top" Width="247" Height="95"/>
            <TextBox x:Name="txtLaukaustenMäärä" HorizontalAlignment="Left" Margin="42,444,0,0" TextWrapping="Wrap" Text="Laukausten määrä:" VerticalAlignment="Top" Width="247" Height="95"/>
            <TextBox x:Name="txtAmpujienMäärä" HorizontalAlignment="Left" Margin="42,553,0,0" TextWrapping="Wrap" Text="Ampujien määrä:" VerticalAlignment="Top" Width="247" Height="95"/>
            <TextBox x:Name="txtKierrostenMäärä" HorizontalAlignment="Left" Margin="42,663,0,0" TextWrapping="Wrap" Text="Kierrosten määrä:" VerticalAlignment="Top" Width="247" Height="95"/>
            <TextBox HorizontalAlignment="Left" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="1246" Height="853" Background="#78866B" Margin="217,0,0,0"/>
            <Button Content="Aloita tulosten kirjaaminen" HorizontalAlignment="Left" Margin="289,18,0,0" VerticalAlignment="Top" Height="60" Width="127" Background="#78866B" Click="AloitaKirjaaminen_Click"/>
            <Button Content="Näytä tulokset" HorizontalAlignment="Left" Margin="566,18,0,0" VerticalAlignment="Top" Width="127" Height="60" Background="#78866B" Click="NäytäTulokset_Click"/>
            <TextBox HorizontalAlignment="Left" Margin="1283,23,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="143" Height="60" Background="#78866B"/>
            <Button Content="Sulje ohjelma" HorizontalAlignment="Left" Margin="1049,23,0,0" VerticalAlignment="Top" Height="60" Width="131" Click="SuljeOhjelma_Click"/>
        </Grid>
    </Grid>
</Window>
