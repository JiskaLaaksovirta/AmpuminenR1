<Window x:Class="Ampumapäiväkirjakonsoli.Ampujataulukko"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ampumapäiväkirjakonsoli"
        mc:Ignorable="d"
        Title="Ampujataulukko" Height="900" Width="1100">
    <Grid Margin="0,0,0,-6">
        <Grid.Background>
            <ImageBrush ImageSource="/camo.jpg" Opacity="0.7" Stretch="UniformToFill"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" MinHeight="111.96"/>
        </Grid.RowDefinitions>

        <!-- Ampumapäiväkirjan tietojen syöttö -->
        <Label Content="Ampumaradan pituus (m):" Margin="5,115,0,14" Grid.Row="2" Background="#FFC3C1C1" HorizontalAlignment="Left" Width="271" MaxHeight="50" />
        <TextBox x:Name="txtAmpumaradanPituus"  Margin="151,118,0,23" Grid.Row="2" HorizontalAlignment="Left" Width="115" MaxLength="4" MaxHeight="45"/>

        <Label Content="Ampujien määrä:"  Margin="5,178,0,-48" Grid.Row="2" Background="#FFC3C1C1" HorizontalAlignment="Left" Width="271" MaxHeight="50"/>
        <TextBox x:Name="txtAmpujienMäärä"  Margin="151,183,0,-43" Grid.Row="2" HorizontalAlignment="Left" Width="115" MaxLength="2" MaxHeight="45"/>

        <Label Content="Kuvaus ammunnasta (valinnainen):" Grid.Row="2" Margin="5,269,0,-286" Background="#FFC3C1C1" HorizontalAlignment="Left" Width="271" MaxHeight="200" />
        <TextBox x:Name="txtKuvaus" Grid.Row="2" Margin="18,303,0,-260" AcceptsTab="True" MaxHeight="150"
         TextWrapping="Wrap" AcceptsReturn="True" Height="Auto" VerticalScrollBarVisibility="Auto" HorizontalAlignment="Left" Width="248" MaxLength="300"/>

        <DataGrid x:Name="dataGrid" AutoGenerateColumns="False" Margin="380,100,49,-426" Background="#FF7A8270" Grid.Row="2" IsTabStop="True" BorderBrush="Black" RowHeight="30" Width="auto" MaxWidth="950"
                  Height="Auto" MaxHeight="600" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Etunimi" Width="25*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding Etunimi, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="False"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Sukunimi" Width="25*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding Sukunimi, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="False"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Laukausten määrä" Width="25*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding LaukaustenMäärä, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="False"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Kokonaistulos" Width="25*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding Kokonaistulos, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="False"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Napit ja tekstilaatikko tulosten näyttämiseen ja ohjelman sulkemiseen -->
        <TextBox x:Name="txtNykyinenAika"  MaxHeight="60" Margin="185,5,0,0" Grid.Row="0" Background="#FF7A8270" HorizontalAlignment="Left" Width="173"  TextAlignment="Center" VerticalContentAlignment="Center"/>
        <Button Content="Aloita tulosten kirjaaminen"  MaxHeight="60" HorizontalAlignment="Left" Margin="5,5,0,0" VerticalAlignment="Top" Height="70" Width="173" Background="#FF7A8270" Click="AloitaKirjaaminen_Click" Grid.Row="0"/>
        <Button Content="Tallenna"  MaxHeight="60" Width="170" HorizontalAlignment="Left" Margin="5,20,0,94" Click="TallennaTiedot_Click" Background="#FFC3C1C1" Grid.Row="1" Grid.RowSpan="2"/>
        <Button Content="Palaa päävalikkoon"  MaxHeight="60" Width="170" Click="PoistuPäävalikkoon_Click" Margin="0,5,10,9" Background="#FFC3C1C1" HorizontalAlignment="Right"/>
        <Button Content="Keskeytä kirjaus" MaxHeight="60" Height="60" Width="170" Background="#FFC3C1C1" Margin="185,20,0,94" Click="KeskeytaKirjaus_Click" Grid.Row="2" HorizontalAlignment="Left"/>

    </Grid>
</Window>
