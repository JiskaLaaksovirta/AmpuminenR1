<Window x:Class="Ampumapäiväkirjakonsoli.Ampujataulukko"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ampumapäiväkirjakonsoli"
        mc:Ignorable="d"
        Title="Ampujataulukko" Height="900" Width="1100">
    <Grid Margin="0,0,0,-6">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="61"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" MinHeight="0"/>
            <RowDefinition Height="Auto" MinHeight="0"/>
            <RowDefinition Height="Auto" MinHeight="143"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="txtNykyinenAika" Margin="190,0,751,0" Grid.Row="0" Background="#78866B"/>

        <!-- Ampumapäiväkirjan tietojen syöttö -->
        <Label Content="Ampumaradan pituus (m):" Margin="0,115,829,-10" Grid.Row="4" />
        <TextBox x:Name="txtAmpumaradanPituus"  Margin="146,118,829,-10" Grid.Row="4" />

        <Label Content="Ampujien määrä:"  Margin="0,156,829,-49" Grid.Row="4" />
        <TextBox x:Name="txtAmpujienMäärä"  Margin="146,156,829,-47" Grid.Row="4"/>

        <Label Content="Kuvaus ammunnasta (valinnainen):" Grid.Row="4" Margin="15,269,839,-260" />
        <TextBox x:Name="txtKuvaus" Grid.Row="4" Margin="13,303,839,-260" AcceptsTab="True" />

        <DataGrid x:Name="dataGrid" AutoGenerateColumns="False" Margin="276,40,76,-548" Background="#78866B" Grid.Row="4" IsTabStop="True">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Etunimi" Width="25*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding Etunimi, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="False"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Sukunimi" Width="25*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding Sukunimi, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="False"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Kokonaistulos" Width="25*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding Kokonaistulos, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="False"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Laukausten määrä" Width="25*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding LaukaustenMäärä, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="False"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>

        <!-- Napit ja tekstilaatikko tulosten näyttämiseen ja ohjelman sulkemiseen -->
        <Button Content="Aloita tulosten kirjaaminen" HorizontalAlignment="Left" Margin="12,0,0,0" VerticalAlignment="Top" Height="60" Width="173" Background="#78866B" Click="AloitaKirjaaminen_Click" Grid.Row="2" Grid.RowSpan="3"/>
        <Button Content="Tallenna" HorizontalAlignment="Left" Margin="13,0,0,0" VerticalAlignment="Center" Height="61" Width="172" Click="TallennaTiedot_Click"/>
        <Button Content="Palaa päävalikkoon" HorizontalAlignment="Left" VerticalAlignment="Center" Height="61" Width="172" Click="PoistuPäävalikkoon_Click" Margin="928,0,0,0"/>
    </Grid>
</Window>
