<Window x:Class="Ampumapäiväkirjakonsoli.Ampujataulukko"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ampumapäiväkirjakonsoli"
        mc:Ignorable="d"
        Title="Ampujataulukko" Height="900" Width="1100" MinWidth="950" MinHeight="750">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/camo.jpg" Opacity="0.5" Stretch="None"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Rivi 0: Päivämäärä ja Aloita tulosten kirjaaminen -painike -->
            <RowDefinition Height="Auto"/>
            <!-- Rivi 1: Syöttökentät ja niiden otsikot -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="14*"/>
            <RowDefinition Height="9*"/>
            <!-- Rivi 2: DataGrid ja muut hallintaelementit -->
        </Grid.RowDefinitions>

        <!--Rivi 0-->
        <!-- Napit ja tekstilaatikko tulosten näyttämiseen ja ohjelman sulkemiseen -->
        <Button Content="Aloita tulosten kirjaaminen" MaxHeight="60" VerticalAlignment="Top" Height="60" Background="#FFAEB5A2"
                Click="AloitaKirjaaminen_Click" Grid.Row="0" BorderBrush="Black" FontFamily="Global Sans Serif" FontSize="14" Margin="5,20,0,0" HorizontalAlignment="Left" Width="170"/>

        <TextBox x:Name="Päivämäärä"  MaxHeight="60" Margin="188,17,0,0" Grid.Row="0" Background="#FFAEB5A2"  TextAlignment="Center" VerticalContentAlignment="Center" TextWrapping="Wrap" BorderBrush="Black"
                  SelectionBrush="#FF7A8270" FontFamily="Global Sans Serif" FontSize="14" IsReadOnly="True" HorizontalAlignment="Left" Width="170"/>


        <Button Content="Palaa päävalikkoon"  MaxHeight="60" Click="PoistuPäävalikkoon_Click" Margin="0,20,10,4" Background="#FFF7F8FA" 
                FontFamily="Global Sans Serif" FontSize="14" Height="60" Grid.Row="0" MaxWidth="170" HorizontalAlignment="Right" Width="170"/>

        <!--Rivi 1-->
        <Button Content="Tallenna"  MaxHeight="60" Margin="5,15,0,99" Click="TallennaTiedot_Click" Background="#FFF7F8FA" 
                Grid.Row="1" BorderBrush="Black" FontFamily="Global Sans Serif" FontSize="14" HorizontalAlignment="Left" Width="170"/>

        <Button Content="Keskeytä kirjaus" MaxHeight="60" Height="60" Background="#FFF7F8FA" Margin="188,16,0,100" Click="KeskeytaKirjaus_Click" Grid.Row="1" BorderBrush="Black" FontFamily="Global Sans Serif" FontSize="14" HorizontalAlignment="Left" Width="170"/>

        <TextBox x:Name="txtOhje" MaxHeight="60" Height="60" TextAlignment="Center" Margin="380,16,0,0" Grid.Row="1" TextWrapping="Wrap"
                 Text="Ohje: Aloita syöttämällä ampumaradan pituus sekä ampujien määrä." VerticalAlignment="Top" BorderBrush="Black" FontFamily="Global Sans Serif" FontSize="14" HorizontalAlignment="Left" Width="336"/>

        <!-- Ampumapäiväkirjan tietojen syöttö -->
        <!--Rivi 1-->
        <Label Content="Ampumaradan pituus (m):" Margin="5,114,0,2" Grid.Row="1" Background="#FFF7F8FA" MaxHeight="50" BorderBrush="Black"
               BorderThickness="1" FontFamily="Global Sans Serif" FontSize="14" HorizontalAlignment="Left" Width="353" />
        <TextBox x:Name="txtAmpumaradanPituus"  Margin="188,123,0,17" Grid.Row="1" MaxLength="4" MaxHeight="34" BorderBrush="#FF4E5056" 
                 SelectionBrush="#FF7A8270" FontFamily="Global Sans Serif" MaxWidth="157" MinWidth="157" MinHeight="36" GotFocus="txtAmpumaradanPituus_GotFocus" HorizontalAlignment="Left" Width="157"/>

        <Label Content="Ampujien määrä:"  Margin="5,2,0,530" Grid.Row="2" Background="#FFF7F8FA" MaxHeight="50"
               BorderBrush="Black" BorderThickness="1" FontFamily="Global Sans Serif" FontSize="14" HorizontalAlignment="Left" Width="353"/>
        <TextBox x:Name="txtAmpujienMäärä"  Margin="188,8,0,544" Grid.Row="2" MaxLength="2" MaxHeight="34" BorderBrush="#FF4E5056"
                 SelectionBrush="#FF7A8270" FontFamily="Global Sans Serif" MaxWidth="157" MinWidth="157" MinHeight="34" GotFocus="txtAmpujienMäärä_GotFocus" HorizontalAlignment="Left" Width="157"/>

        <Label x:Name="Kuvaus" Content="Kuvaus ammunnasta (valinnainen):" Grid.Row="2" Margin="5,67,0,306" Background="#FFF7F8FA" MaxHeight="250" BorderBrush="Black" BorderThickness="1" Foreground="Black" FontFamily="Global Sans Serif" FontSize="14" HorizontalAlignment="Left" Width="353" />

        <TextBox x:Name="txtKuvaus" Grid.Row="2" Margin="18,127,0,328" AcceptsTab="True" MaxHeight="150" TextWrapping="Wrap" AcceptsReturn="True"
                 Height="Auto" VerticalScrollBarVisibility="Auto" MaxLength="300" BorderBrush="#FF4E5056" SelectionBrush="#FF7A8270" FontFamily="Global Sans Serif" GotFocus="txtKuvaus_GotFocus" TextChanged="txtKuvaus_TextChanged" HorizontalAlignment="Left" Width="327" />

        <Label x:Name="Laskuri" Content="0 / 300" Grid.Row="2" Margin="280,67,0,113" MaxHeight="20" FontFamily="Global Sans Serif" FontSize="10" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Width="75" />

        <!--Rivi 2-->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="363,76,0,19" Grid.RowSpan="3" HorizontalAlignment="Left" Width="737">
            <DataGrid x:Name="dataGrid" AutoGenerateColumns="False" Background="#FFAEB5A2" IsTabStop="True" BorderBrush="Black" RowHeight="30" MaxWidth="950"
                      MaxHeight="700" HorizontalScrollBarVisibility="Auto" FontFamily="Global Sans Serif" FontSize="14" Width="700" Height="611">
                <DataGrid.RowHeaderStyle>
                    <Style/>
                </DataGrid.RowHeaderStyle>
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Etunimi" Width="25*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding Etunimi, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="False"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Sukunimi" Width="25*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding Sukunimi, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="False"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Laukaukset" Width="25*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding Laukau, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="False"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Kokonaistulos" Width="25*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding Kokonaistulos, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="False"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>
    </Grid>
</Window>
